#!/usr/bin/env pypy

import sys
from pykmer.file import openFile, readFasta, readFastq

rcDict = {'A':'T', 'C':'G', 'G':'C', 'T':'A'}
def rc(s):
    r = []
    for c in s:
        r.append(rcDict[c])
    return ''.join(r[::-1])

root = sys.argv[1]

chs = set([])
bed = {}
with openFile(sys.argv[2]) as f:
    for l in f:
        t = l.split()
        ch = t[0]
        st = int(t[1])
        en = int(t[2])
        nm = t[3]
        bed[nm] = (ch, st, en)
        chs.add(ch)

chs = dict([(ch, list(readFasta(open(root + '/' + ch + '.fa')))[0][1]) for ch in sorted(chs)])

errs = 0
for fn in sys.argv[3:]:
    if fn.endswith('_1.fastq'):
        end = 1
    else:
        end = -1
    with openFile(fn) as f:

        n = 0
        for rd in readFastq(f):
            n += 1
            t = rd[0].split()
            nm = t[1]
            pos = int(t[2])
            fragLen = int(t[3])
            if t[4] == '+':
                strand = 1
            else:
                strand = -1
            rdSeq = rd[1]
            L = len(rdSeq)
            ch = bed[nm][0]
            frag = chs[ch][pos:pos+fragLen]

            if strand == -1:
                frag = rc(frag)

            if end == 1:
                rdFrag = frag[:L]
            else:
                rdFrag = frag[-L:]

            if rdSeq != rdFrag:
                errs += 1
                print n, end, pos, fragLen, strand, rdSeq
                print n, end, pos, fragLen, strand, rdFrag

if errs == 0:
    sys.exit(0)
else:
    sys.exit(1)
